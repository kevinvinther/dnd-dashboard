---
import BaseLayout from '../layouts/BaseLayout.astro';
const allSessions = await Astro.glob('./sessions/*.md');
import Session from '../components/Session.astro';
---
<BaseLayout>
  <h1 class="text-3xl font-bold mb-6">Resum√© af Sessions</h1>
  <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {allSessions.map((post) => <Session date={post.frontmatter.date} url={post.url} title={post.frontmatter.title}  />)}
  </ul>
</BaseLayout>
