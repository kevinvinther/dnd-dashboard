---
import React from 'react';
import SearchableTable from '../components/SearchableTable.jsx';
import MinimalLayout from '../layouts/MinimalLayout.astro';

import itemsData from '../data/inventory.json';

const columns = [
  { key: "name", label: "Item" },
  { key: "quantity", label: "Mængde" },
  { key: "owner", label: "Ejer" },
  { key: "category", label: "Kategori" },
  { key: "value", label: "Værdi" },
  { key: "weight", label: "Vægt (lb)" },
  { key: "rarity", label: "Sjældenhed" },
  { key: "description", label: "Beskrivelse"},
  { key: "notes", label: "Noter"}
];


---
<MinimalLayout pageTitle="Inventory">
  <SearchableTable data={itemsData.items} columns={columns} client:visible />
</MinimalLayout>
